import math
import time

times = time.time_ns()
speed = 10**(-8)
coeamplitude = 1
coefrequency = 1
def t():
    return((time.time_ns() - times)*speed)

for o in range(40):
    c = (255, 255, 255)
    k = (1, 1, 1)
    frequency = 0.3
    amplitude = sum(c)/765*coeamplitude
    def pixel(row, column):
        if abs(math.cos((t() + column)*frequency)* 4 * amplitude + 3.5 - row) <= 0.5:
            return (k)
        return (0, 0, 0)

    image = []
    for x in range(8):
        for y in range(8):
            image.append(pixel(x,y))
