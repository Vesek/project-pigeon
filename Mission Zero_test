import math
import time

times = time.time()
speed = 10
coeamplitude = 1
coefrequency = 1
def t():
    return(time.time() - times)

while t() < 28:
    c = (255, 255, 255)
    #0.7-0.1
    amplitude = sum(c)/765*coeamplitude
    def pixel(row, column):
        Ra = c[0]
        Ga = c[1]
        Ba = c[2]
        Rf = 430
        Gf = 565
        Bf = 650
        f = 0.001 * coefrequency
        a = 0.007 * coeamplitude
        if abs((a * (Ra * math.sin((t() * speed + column) * f * Rf) + Ga * math.sin((t() * speed + column) * f * Gf) + Ba * math.sin((t() * speed + column) * f * Bf))) + 3.5 - row) <= 0.5:
            return (c)
        return (0, 0, 0)

    image = []
    for x in range(8):
        for y in range(8):
            image.append(pixel(x,y))
    #        print(x*10+y, image[-1])
    # print(image)
    # for i in range(8):
    #     print(image[i*8 : 7+i*8])
    # print(t())
    for x in range(8):
        line = ""
        for y in range(8):
            if sum(image[8*x+y])>0:
                line += "■  "
            else:
                line += "□  "
        print(line)
    #■
    #□
    time.sleep(0.1)